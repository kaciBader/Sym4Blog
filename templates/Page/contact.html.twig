{# Page/contact.html.twig #}
{% extends 'Page/layout.html.twig' %}

{% block title %} Contact {% endblock %}

{% block body %}
    <header>
        <h1>Contact sym4blog</h1>
    </header>

    <p>Want to contact sym4blog?</p>

    <form action="{{ path('blog_contact') }}" method="post"  class="blogger">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}